{% extends('ensemble01filemakerBundle::pageBaseFilemaker.html.twig') %}
{% block body %}
	<div class="container">
		{% if fm.databases is iterable %}
		<h3 class="well well-xs">Liste des bases de données<br /><small>{{ fm.databases|length }} résultat(s)</small></h3>
		<table class="table table-bordered table-hover table-condensed">
			<tr class="active">
				<th>Nom de la base</th>
			</tr>
			{% for database in fm.databases %}
			<tr>
				<td>{{ database|raw }}</td>
			</tr>
			{%- endfor %}
		</table>
		{% else %}
		<h3 class="well well-xs">Liste des bases de données<br /><small>Erreur</small></h3>
		<div class="alert alert-danger" role="alert">{{ fm.databases|raw }}</div>
		{% endif %}
	</div>
{% endblock body %}
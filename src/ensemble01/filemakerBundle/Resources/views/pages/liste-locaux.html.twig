{% extends('ensemble01filemakerBundle::BSpageBaseFilemaker.html.twig') %}
{% block h1 %}
	<h1 class="page-header">{{ h1|raw }}</h1>
{% endblock h1 %}
{% block body %}
	<div class="col-lg-12">
		{% if locauxByLieux is iterable %}
		<h3 class="well well-xs">Liste des locaux<br /><small>{{ locauxByLieux|length }} r√©sultat(s) <span class="caret"></span></small></h3>
		<table class="table table-bordered table-hover table-condensed">
			<tr class="active">
				<th>Fk_Id_Local</th>
				<th>Fk_Id_Lieu</th>
			</tr>
			{% for local in locauxByLieux %}
			<tr>
				<td>{{ local.getField("Fk_Id_Local")|raw }}</td>
				<td>{{ local.getField("Fk_Id_Lieu")|raw }}</td>
			</tr>
			{%- endfor %}
		</table>
		{% else %}
		<h3 class="well well-xs">Liste des locaux<br /><small>Erreur</small></h3>
		<div class="alert alert-danger" role="alert">{{ locauxByLieux|raw }}</div>
		{% endif %}
	</div>
{% endblock body %}